extends layout

block content

    h1= title
    - let houseplantId = toShow._id
    - let houseplant_scientific_name = toShow.scientific_name
    - let houseplant_common_name = toShow.common_name
    - let houseplant_difficulty = toShow.difficulty
    div
        div.row
            div(class='houseplantAttr mr-3') Houseplant ID is:
            div #{houseplantId}
        div.row
            div(class='houseplantAttr mr-3') Houseplant Scientific name is:
            div #{houseplant_scientific_name}
        div.row
            div(class='houseplantAttr mr-3') Houseplant Common Name is:
            div #{houseplant_common_name}
        div.row
            div(class='houseplantAttr mr-3') Houseplant Difficulty is:
            div #{houseplant_difficulty}